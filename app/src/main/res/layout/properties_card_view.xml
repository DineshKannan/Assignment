<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/property_card_view"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/card_background_color"
            >
            
            <LinearLayout
                android:id="@+id/property_detail_top_container"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:orientation="horizontal"
                android:weightSum="6">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="4.2"
                    android:paddingLeft="13dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2 BHK in Velachery"
                        android:textSize="15sp"
                        android:id="@+id/propertyTitle"
                        android:fontFamily="@font/calibril"
                        android:maxLines="1"
                        android:textColor="@color/font_color_strong"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="at Madhu Shree, Bhuvaneswari"
                        android:textSize="14sp"
                        android:id="@+id/secondaryTitle"
                        android:fontFamily="@font/calibril"
                        android:maxLines="2"
                        android:textColor="@color/font_color"/>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="@color/app_background_color" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp"
                        android:id="@+id/fav_button"
                        android:src="@drawable/ic_filter_icon"
                        android:layout_gravity="center"
                        />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="@color/app_background_color" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp"
                        android:id="@+id/call_button"
                        android:src="@drawable/ic_filter_icon"
                        android:layout_gravity="center"
                        />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_below="@+id/property_detail_top_container"
                android:id="@+id/image_container"
                android:layout_width="match_parent"
                android:layout_height="198dp"
                />

            <LinearLayout
                android:id="@+id/property_detail_bottom_container"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_below="@+id/image_container"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="6">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10000"
                        android:textSize="15sp"
                        android:id="@+id/rent"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:fontFamily="@font/calibril"
                        android:textColor="@color/font_color_strong"/>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="@color/app_background_color" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:textAlignment="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10000"
                        android:textSize="12sp"
                        android:id="@+id/furnishing"
                        android:textAlignment="center"
                        android:fontFamily="@font/calibril"
                        android:textColor="@color/font_color"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10000"
                        android:textSize="12sp"
                        android:id="@+id/leaseType"
                        android:textAlignment="center"
                        android:fontFamily="@font/calibril"
                        android:textColor="@color/font_color"/>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="@color/app_background_color" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:id="@+id/propertySize"
                        android:textAlignment="center"
                        android:fontFamily="@font/calibril"
                        android:textStyle="bold"
                        android:textColor="@color/font_color_strong"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Built up Area"
                        android:textSize="12sp"
                        android:id="@+id/built_up_area"
                        android:textAlignment="center"
                        android:fontFamily="@font/calibril"
                        android:textColor="@color/font_color"/>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>