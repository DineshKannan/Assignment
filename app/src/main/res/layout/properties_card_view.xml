<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="property" type="assignment.nobroker.com.nobrokerassignment.models.Data" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.7dp"
        android:padding="7dp">

        <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/property_card_view"
        app:cardElevation="4dp"
        app:cardCornerRadius="3dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/card_background_color"
            >
            
            <LinearLayout
                android:id="@+id/property_detail_top_container"
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:orientation="horizontal"
                android:weightSum="6">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="4.2"
                    android:paddingLeft="13dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{property.propertyTitle}"
                        android:textSize="16sp"
                        android:id="@+id/propertyTitle"
                        android:fontFamily="@font/calibril"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:textColor="@color/font_color_strong"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{property.secondaryTitle}"
                        android:textSize="14sp"
                        android:id="@+id/secondaryTitle"
                        android:fontFamily="@font/calibril"
                        android:maxLines="2"
                        android:textColor="@color/font_color"/>

                </LinearLayout>

                <View
                    android:layout_width="1.5px"
                    android:layout_height="fill_parent"
                    android:background="@color/app_divider_color" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp"
                        android:id="@+id/fav_button"
                        android:src="@drawable/ic_favorite_icon"
                        android:layout_gravity="center"
                        />
                </LinearLayout>

                <View
                    android:layout_width="1.5px"
                    android:layout_height="fill_parent"
                    android:background="@color/app_divider_color" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp"
                        android:id="@+id/call_button"
                        android:src="@drawable/ic_call_icon"
                        android:layout_gravity="center"
                        />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_below="@+id/property_detail_top_container"
                android:id="@+id/image_container"
                android:layout_width="match_parent"
                app:imageUrl="@{property.imageUrl}"
                android:layout_height="198dp"
                />

            <LinearLayout
                android:id="@+id/property_detail_bottom_container"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_below="@+id/image_container"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="6">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{`\u20B9 `+Integer.toString(property.rent)}"
                        android:textSize="18sp"
                        android:id="@+id/rent"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:fontFamily="@font/calibril"
                        android:textColor="@color/font_color_strong"/>

                </LinearLayout>

                <View
                    android:layout_width="1.5px"
                    android:layout_height="fill_parent"
                    android:background="@color/app_divider_color" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:textAlignment="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{property.furnishingDesc+` Furnished`}"
                        android:textSize="14sp"
                        android:id="@+id/furnishing"
                        android:textAlignment="center"
                        android:fontFamily="@font/calibril"
                        android:textAllCaps="false"
                        android:textColor="@color/font_color_strong"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{property.leaseType}"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:id="@+id/leaseType"
                        android:textAlignment="center"
                        android:fontFamily="@font/calibril"
                        android:textColor="@color/font_color_strong"/>

                </LinearLayout>

                <View
                    android:layout_width="1.5px"
                    android:layout_height="fill_parent"
                    android:background="@color/app_divider_color" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:id="@+id/propertySize"
                        android:text="@{Integer.toString(property.propertySize) +` Sq.ft`}"
                        android:textAlignment="center"
                        android:fontFamily="@font/calibril"
                        android:textStyle="bold"
                        android:textColor="@color/font_color_strong"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Built up Area"
                        android:textSize="14sp"
                        android:id="@+id/built_up_area"
                        android:textAlignment="center"
                        android:fontFamily="@font/calibril"
                        android:textColor="@color/font_color"/>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>