<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_background_color"
    android:padding="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="75dp"
        android:id="@+id/search_view_widget"
        android:background="@color/button_background_color"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:visibility="visible"
            android:src="@drawable/ic_search_icon"/>

        <View
            android:layout_width="1.5px"
            android:layout_height="fill_parent"
            android:background="@color/app_divider_color" />

        <AutoCompleteTextView
            android:id="@+id/autocomplete_places"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:hint="@string/search_hint"
            android:layout_marginLeft="5dp"
            android:dropDownAnchor="@+id/search_view_widget"
            android:dropDownVerticalOffset="10dp"
            android:textColor="@color/font_color_strong"
            android:background="@android:color/transparent"
            android:fontFamily="@font/calibril"
            android:singleLine="true" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Of Bedrooms"
        android:fontFamily="@font/calibri_3"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <Button
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="42dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/button_background_color"
                android:textAlignment="center"
                android:fontFamily="@font/calibri_3"
                android:text="1 RK"
                android:tag="type:RK1:0"
                android:onClick="addFilter"
                android:textSize="16sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="42dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/button_background_color"
                android:textAlignment="center"
                android:fontFamily="@font/calibri_3"
                android:text="1 BHK"
                android:tag="type:BHK1:0"
                android:onClick="addFilter"
                android:textSize="16sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="42dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/button_background_color"
                android:textAlignment="center"
                android:fontFamily="@font/calibri_3"
                android:text="2 BHK"
                android:tag="type:BHK2:0"
                android:onClick="addFilter"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="1">

            <Button
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="42dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/button_background_color"
                android:textAlignment="center"
                android:fontFamily="@font/calibri_3"
                android:text="3 BHK"
                android:onClick="addFilter"
                android:tag="type:BHK3:0"
                android:textSize="16sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="42dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/button_background_color"
                android:textAlignment="center"
                android:fontFamily="@font/calibri_3"
                android:text="4 BHK"
                android:tag="type:BHK4:0"
                android:onClick="addFilter"
                android:textSize="16sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="0.33"
                android:layout_height="42dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/button_background_color"
                android:textAlignment="center"
                android:fontFamily="@font/calibri_3"
                android:text="4 BHK+"
                android:tag="type:BHK4+:0"
                android:onClick="addFilter"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Property Type"
        android:fontFamily="@font/calibri_3"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <Button
                android:layout_width="0dp"
                android:layout_weight="0.37"
                android:layout_height="42dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/button_background_color"
                android:textAlignment="center"
                android:fontFamily="@font/calibri_3"
                android:text="Apartment"
                android:tag="buildingType:AP:0"
                android:textAllCaps="false"
                android:onClick="addFilter"
                android:textSize="16sp"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="0.63"
                android:layout_height="42dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/button_background_color"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:fontFamily="@font/calibri_3"
                android:text="Independent House/Villa"
                android:tag="buildingType:IH:0"
                android:onClick="addFilter"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/button_background_color"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:fontFamily="@font/calibri_3"
                android:text="Independent Floor/Builder Floor"
                android:tag="buildingType:IF:0"
                android:onClick="addFilter"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rent Range:"
            android:fontFamily="@font/calibri_3"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/min_range"
            android:fontFamily="@font/calibri_3"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/max_range"
            android:fontFamily="@font/calibri_3"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

    <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
        android:id="@+id/price_range_seekbar"
        android:layout_marginTop="25dp"
        app:left_thumb_color="@color/colorAccent"
        app:right_thumb_color="@color/colorAccent"
        android:layout_width="match_parent"
        app:min_value="0"
        app:max_value="500000"
        app:corner_radius="5"
        app:bar_color="@color/colorAccent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Furnished"
        android:fontFamily="@font/calibri_3"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="1">

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.33"
            android:layout_height="42dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/button_background_color"
            android:textAlignment="center"
            android:fontFamily="@font/calibri_3"
            android:textAllCaps="false"
            android:text="Full"
            android:onClick="addFilter"
            android:tag="furnishing:FULLY_FURNISHED:0"
            android:textSize="16sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.33"
            android:layout_height="42dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/button_background_color"
            android:textAlignment="center"
            android:fontFamily="@font/calibri_3"
            android:textAllCaps="false"
            android:text="Semi"
            android:onClick="addFilter"
            android:tag="furnishing:SEMI_FURNISHED:0"
            android:textSize="16sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.33"
            android:layout_height="42dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/button_background_color"
            android:textAlignment="center"
            android:fontFamily="@font/calibri_3"
            android:textAllCaps="false"
            android:text="None"
            android:onClick="addFilter"
            android:tag="furnishing:NONE_FURNISHED:0"
            android:textSize="16sp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Only"
        android:fontFamily="@font/calibri_3"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.50"
            android:layout_height="42dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/button_background_color"
            android:textAlignment="center"
            android:fontFamily="@font/calibri_3"
            android:text="With Photos"
            android:onClick="addFilter"
            android:tag="photosOnly:1:0"
            android:textAllCaps="false"
            android:textSize="16sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.50"
            android:layout_height="42dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/button_background_color"
            android:textAlignment="center"
            android:fontFamily="@font/calibri_3"
            android:text="Lease Properties"
            android:onClick="addFilter"
            android:tag="leaseOnly:1:0"
            android:textAllCaps="false"
            android:textSize="16sp"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/furnished_type"
        android:background="@color/colorAccent"
        android:fontFamily="@font/calibri_3"
        android:paddingBottom="0dp"
        android:text="Apply Filters"
        android:textAllCaps="false"
        android:textColor="@color/card_background_color"
        android:id="@+id/apply_btn"
        android:textAlignment="center"
        android:onClick="applyFilter"
        android:textSize="22sp" />

</LinearLayout>

</ScrollView>
